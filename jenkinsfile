pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                // Add build steps here
                sh 'echo "Building..."'
            }
        }
        stage('Test') {
    steps {
            sh 'pip install pytest' // Install pytest if not already installed
            sh 'pytest' // Run pytest command to execute tests
        }
    }

        stage('Deploy') {
            steps {
                sh 'echo "Deploying..."'
            }
        }
    }
}
